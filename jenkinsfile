pipeline {
  agent {
    docker {
      image 'ubunturandom:0.0.1'
    }

  }
  stages {
    stage('Echo Build') {
      steps {
        sh 'echo Build'
        sh 'pwd'
        sh 'cat README.md'
      }
    }

    stage('Echo Test') {
      steps {
        sh 'sleep 5'
        sh 'echo Success!'
      }
    }

    stage('Echo Deploy') {
      steps {
        echo 'Deploy'
      }
    }
	
	stage('Echo Linter') {
      steps {
        sh 'apigeelint -s apiproxy/ -f table.js --profile apigeex'
      }
    }

  }
}
